{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "allowJs": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "postcss.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    "start.js",
    ".next/types/**/*.ts",
    "../server/drizzle.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}