{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "dependsOn": ["^db:generate"]
    },
    "db:migrate": {
      "dependsOn": ["^db:migrate"]
    },
    "db:studio": {
      "dependsOn": ["^db:studio"]
    }
  },
  "globalDependencies": [
    ".env",
    ".env.local",
    "tsconfig.json" 
  ],
  "globalEnv": ["NEXT_PUBLIC_API_URL", "DATABASE_URL", "NODE_ENV"]
}
